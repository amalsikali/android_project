<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ResultActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/delius_swash_caps"
        android:gravity="center|center_horizontal"
        android:text="Resultat du test"
        android:textSize="30sp"
        android:textColor="@color/saumon"/>

    <TextView
        android:id="@+id/tvresultat"
        android:layout_width="match_parent"
        android:layout_height="463dp"
        android:layout_marginBottom="20dp"
        android:text="TextView"
        android:gravity="center|center_horizontal"
        android:textColor="@color/black"/>

    <Button
        android:id="@+id/btnagain"
        android:layout_width="201dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center_vertical"
        android:text="Refaire le test" />

    <Button
        android:id="@+id/btnlogout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="clip_vertical|center_horizontal"
        android:text="Se dÃ©connecter" />
</LinearLayout>